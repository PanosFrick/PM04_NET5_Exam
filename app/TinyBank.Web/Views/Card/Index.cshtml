@model TinyBank.Core.Services.Options.CheckoutOptions

@{
    ViewData["Title"] = "Checkout";
}
<h4>Please Fill in your card data in order to checkout</h4>
<hr />
<div class="alert alert-success alert-dismissible fade show invisible" role="alert">
    <strong>Success!</strong> Your payment was completed successfully!
</div>
<div class="alert alert-danger alert-dismissible fade show invisible" role="alert">
    <strong>Error!</strong> <div class="checkout-validation-errors"></div>
</div>
<div class="row spinner invisible">
    <div class="spinner-border" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>
<div class="row formdiv">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label class="control-label">Card Number</label>
                <input value="@Model.CardNumber" class="form-control js-checkout-card-number" />
            </div>
            <div class="form-group">
                <label class="control-label">Expiration</label>
            </div>
            <div class="form-group">
                <label class="control-label">Year</label>
                <input value="@Model.ExpirationYear" class="form-control js-checkout-expiration-year" />
                
            </div>
            <div class="form-group">
                <label class="control-label">Month</label>
                <input value="@Model.ExpirationMonth" class="form-control js-checkout-expiration-month" />
            </div>
            <div class="form-group">
                <label class="control-label">Amount</label>
                <input value="@Model.Amount" class="form-control js-checkout-amount" />
            </div>
            <button type="button" class="btn btn-primary js-checkout">Pay</button>
        </form>
    </div>
</div>



